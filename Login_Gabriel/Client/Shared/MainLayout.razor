@inherits LayoutComponentBase

@using Login_Gabriel.Client.Extensiones
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider autenticacionProvider
@inject NavigationManager navManager



<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>
        <a @onclick="CerrarSesion" href="javascript:void(0)">SALIR</a>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code{
    private async Task CerrarSesion() 
    {
        var autenticacionExt = (AuthenticationExtension)autenticacionProvider;
        await autenticacionExt.UpdateAuthenticationstate(null);
        navManager.NavigateTo("/", true);       
    }
}